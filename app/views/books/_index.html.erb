<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.category, home_search_path(keyword: book.category) %></td>
        <td><div class="favorite-btn_<%= book.id %>"><%= render partial: "favorites/favorite-btn", locals: {book: book} %></div></td>
        <td>コメント数:<%= book.book_comments.count %></td>
        <td>
         <div id="review-rating-<%= book.id %>"></div>
          <script>
          $('#review-rating-<%= book.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            readOnly: true,
            score: <%= book.rate %>,
          });
          </script>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>